<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Empleados - Barbería JK</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f4f4;
        }

        .hero {
            height: 300px;
            background: linear-gradient(135deg, #111, #444);
        }

        .table-container {
            margin-top: -40px;
        }

        .card-custom {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .btn-warning {
            background-color: #f1c40f;
            border: none;
        }

            .btn-warning:hover {
                background-color: #d4ac0d;
            }

        .footer-custom {
            margin-top: 80px;
            padding: 40px;
            background: linear-gradient(135deg, #6c5ce7, #a29bfe);
            color: white;
            text-align: center;
        }

        .table thead {
            background-color: #111;
            color: white;
        }
    </style>
</head>
<body>

    <div class="hero position-relative text-white text-center">
        <div style="position:absolute; top:0; left:0; width:100%; height:100%; background-color: rgba(0,0,0,0.5);"></div>
        <div class="d-flex flex-column justify-content-center align-items-center h-100 position-relative">
            <h1 class="display-4 fw-bold">Gestión de Empleados</h1>
            <p class="lead">Administra el personal de Barbería JK</p>
            <button class="btn btn-warning btn-lg mt-2" data-bs-toggle="modal" data-bs-target="#agregarEmpleadoModal">Agregar Empleado</button>
        </div>
    </div>

    <div class="container table-container">
        <div class="card card-custom p-4">
            <h3 class="fw-bold mb-3">Listado de empleados</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="empleadosTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Teléfono</th>
                            <th>Cargo</th>
                            <th>% Comisión</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>



    <!-- MODALES -->
    <div class="modal fade" id="agregarEmpleadoModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">Agregar Empleado</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formAgregarEmpleado">
                        <div class="mb-3"><label class="form-label">Nombre</label><input type="text" class="form-control" id="nombreEmpleado" required></div>
                        <div class="mb-3"><label class="form-label">Teléfono</label><input type="text" class="form-control" id="telefonoEmpleado" required></div>
                        <div class="mb-3"><label class="form-label">Cargo</label><input type="text" class="form-control" id="cargoEmpleado" required></div>
                        <div class="mb-3"><label class="form-label">% Comisión</label><input type="number" class="form-control" id="porcentajeEmpleado" min="0" max="100" required></div>
                        <button type="submit" class="btn btn-primary w-100">Guardar Empleado</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editarEmpleadoModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">Editar Empleado</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formEditarEmpleado">
                        <input type="hidden" id="editarIdEmpleado">
                        <div class="mb-3"><label class="form-label">Nombre</label><input type="text" class="form-control" id="editarNombreEmpleado" required></div>
                        <div class="mb-3"><label class="form-label">Teléfono</label><input type="text" class="form-control" id="editarTelefonoEmpleado" required></div>
                        <div class="mb-3"><label class="form-label">Cargo</label><input type="text" class="form-control" id="editarCargoEmpleado" required></div>
                        <div class="mb-3"><label class="form-label">% Comisión</label><input type="number" class="form-control" id="editarPorcentajeEmpleado" min="0" max="100" required></div>
                        <button type="submit" class="btn btn-primary w-100">Actualizar Empleado</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const API_URL = 'https://localhost:7106/api/empleado';

        document.addEventListener('DOMContentLoaded', () => {
            cargarEmpleados();

            document.getElementById('formAgregarEmpleado').addEventListener('submit', async e => {
                e.preventDefault();
                const nombre = nombreEmpleado.value;
                const telefono = telefonoEmpleado.value;
                const cargo = cargoEmpleado.value;
                const porcentaje = parseFloat(porcentajeEmpleado.value);

                try {
                    const res = await fetch(API_URL, {
                        method: 'POST',
                        headers: {'Content-Type': 'application/json'},
                        body: JSON.stringify({nombre, telefono, cargo, porcentajeComision: porcentaje})
                    });
                    if(!res.ok) throw new Error();
                    alert('Empleado agregado correctamente');
                    cargarEmpleados();
                    bootstrap.Modal.getInstance(document.getElementById('agregarEmpleadoModal')).hide();
                    formAgregarEmpleado.reset();
                } catch {
                    alert('Error al agregar empleado');
                }
            });

            document.getElementById('formEditarEmpleado').addEventListener('submit', async e => {
                e.preventDefault();
                const id = editarIdEmpleado.value;
                const data = {
                    idEmpleado: id,
                    nombre: editarNombreEmpleado.value,
                    telefono: editarTelefonoEmpleado.value,
                    cargo: editarCargoEmpleado.value,
                    porcentajeComision: parseFloat(editarPorcentajeEmpleado.value)
                };
                try {
                    const res = await fetch(`${API_URL}/${id}`, {
                        method: 'PUT',
                        headers: {'Content-Type': 'application/json'},
                        body: JSON.stringify(data)
                    });
                    if(!res.ok) throw new Error();
                    alert('Empleado actualizado');
                    cargarEmpleados();
                    bootstrap.Modal.getInstance(document.getElementById('editarEmpleadoModal')).hide();
                } catch {
                    alert('Error al actualizar empleado');
                }
            });
        });

        async function cargarEmpleados() {
            const res = await fetch(API_URL);
            const empleados = await res.json();
            const tbody = document.querySelector('#empleadosTable tbody');
            tbody.innerHTML = '';
            empleados.forEach(e => {
                const btnAccion = e.activo
                    ? `<button class="btn btn-danger btn-sm" onclick="desactivarEmpleado(${e.idEmpleado})">Desactivar</button>`
                    : `<button class="btn btn-success btn-sm" onclick="activarEmpleado(${e.idEmpleado})">Activar</button>`;
                tbody.innerHTML += `
                    <tr>
                        <td>${e.idEmpleado}</td>
                        <td>${e.nombre}</td>
                        <td>${e.telefono}</td>
                        <td>${e.cargo}</td>
                        <td>${e.porcentajeComision}</td>
                        <td>${e.activo ? 'Sí' : 'No'}</td>
                        <td>
                            <button class="btn btn-warning btn-sm" onclick="abrirEditarEmpleado(${e.idEmpleado}, '${e.nombre}', '${e.telefono}', '${e.cargo}', ${e.porcentajeComision})">Editar</button>
                            ${btnAccion}
                        </td>
                    </tr>
                `;
            });
        }

        function abrirEditarEmpleado(id, nombre, telefono, cargo, porcentaje) {
            editarIdEmpleado.value = id;
            editarNombreEmpleado.value = nombre;
            editarTelefonoEmpleado.value = telefono;
            editarCargoEmpleado.value = cargo;
            editarPorcentajeEmpleado.value = porcentaje;
            new bootstrap.Modal(document.getElementById('editarEmpleadoModal')).show();
        }

        async function desactivarEmpleado(id) {
            if(!confirm('¿Desactivar empleado?')) return;
            const res = await fetch(`${API_URL}/${id}`, {method:'DELETE'});
            if(res.ok) {
                alert('Empleado desactivado');
                cargarEmpleados();
            } else {
                alert('Error al desactivar');
            }
        }

        async function activarEmpleado(id) {
            if(!confirm('¿Activar empleado?')) return;
            const res = await fetch(`${API_URL}/${id}/activar`, {method:'PUT'});
            if(res.ok) {
                alert('Empleado activado');
                cargarEmpleados();
            } else {
                alert('Error al activar');
            }
        }
    </script>

</body>
</html>
