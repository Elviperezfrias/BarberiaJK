<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Barbería</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background-color: #343a40;
            display: flex;
            flex-direction: column;
            padding-top: 1rem;
        }

            .sidebar .sidebar-brand {
                color: #ffc107;
                font-weight: bold;
                font-size: 1.5rem;
                text-align: center;
                margin-bottom: 2rem;
            }

            .sidebar .nav-link {
                color: #fff;
                padding: 0.75rem 1rem;
                margin: 0.2rem 0;
                border-radius: 0.25rem;
                transition: background-color 0.3s ease, color 0.3s ease;
                text-decoration: none;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: #ffc107 !important;
                }

                .sidebar .nav-link.active {
                    background-color: #ffc107;
                    color: #000 !important;
                }

        /* Contenido principal */
        .main-content {
            flex: 1;
            padding: 2rem;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="sidebar-brand">Barbería JK</div>
        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Inicio</a>
        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Clientes" ? "active" : "")" asp-controller="Clientes" asp-action="Index">Clientes</a>
        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Citas" ? "active" : "")" asp-controller="Citas" asp-action="Index">Citas</a>
        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Empleados" ? "active" : "")" asp-controller="Empleados" asp-action="Index">Empleados</a>
        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Servicios" ? "active" : "")" asp-controller="Servicios" asp-action="Index">Servicios</a>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
